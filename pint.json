{
    "preset": "laravel",
    "rules": {
        "blank_line_before_statement": {
            "statements": [
                "continue",
                "declare",
                "return",
                "throw",
                "try"
            ]
        },
        "concat_space": {
            "spacing": "none"
        },
        "method_argument_space": {
            "on_multiline": "ensure_fully_multiline"
        },
        "ordered_imports": {
            "imports_order": [
                "class",
                "function",
                "const"
            ],
            "sort_algorithm": "alpha"
        },
        "single_line_empty_body": true,
        "types_spaces": {
            "space": "none"
        }
    }
}
