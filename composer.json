{
    "name": "xve/laravel-db-export",
    "description": "Laravel database export package with profile-based exclusions, anonymization, and zero-impact exports",
    "keywords": [
        "laravel",
        "database",
        "export",
        "dump",
        "anonymization",
        "mysql"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "dwb",
            "email": "dev@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "spatie/db-dumper": "^3.4"
    },
    "suggest": {
        "fakerphp/faker": "Required for realistic fake data during anonymization (^1.23). Without it, simple fallbacks are used."
    },
    "require-dev": {
        "captainhook/captainhook": "^5.27",
        "laravel/pint": "^1.13",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Xve\\DbExport\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xve\\DbExport\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php vendor/bin/captainhook install --force --skip-existing --quiet || true"
        ],
        "rector": "vendor/bin/rector",
        "lint": "vendor/bin/pint",
        "test": [
            "@test:lint",
            "@test:unit"
        ],
        "test:rector": "vendor/bin/rector --dry-run",
        "test:lint": "vendor/bin/pint --test",
        "test:types": "vendor/bin/phpstan analyse",
        "test:unit": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage --min=80"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "captainhook/captainhook": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Xve\\DbExport\\DbExportServiceProvider"
            ],
            "aliases": {
                "DbExport": "Xve\\DbExport\\Facades\\DbExport"
            }
        }
    }
}
